                        </div>
                    </div>
                    <?php endforeach; ?>
                    </div>
                <?php endif; ?> 
            </div>
            <div class="rev-3">
                <div><strong>
                    <?= /* @noEscape */ nl2br($block->escapeHtml($_review->getTitle())) ?>\
                </strong></div>
                <div class="review-content" itemprop="description">
                    <?= /* @noEscape */ nl2br($block->escapeHtml($_review->getDetail())) ?>
                </div>  
            </div>
